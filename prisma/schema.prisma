generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Users Table (Customers & Providers)
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(CUSTOMER) // CUSTOMER, PROVIDER, ADMIN
  status UserStatus @default(ACTIVE)
  
  // Relations
  providerProfile ProviderProfile? // Only if role is PROVIDER
  orders          Order[]
  reviews         Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum UserStatus {
  ACTIVE
  BLOCKED
}

enum UserRole {
  CUSTOMER
  PROVIDER
  ADMIN
}

enum ProviderStatus {
  PENDING
  APPROVED
  REJECTED
}

// 2. Provider Profile (Restaurant specific info)
model ProviderProfile {
  id             String @id @default(uuid())
  restaurantName String?
  cuisineType    String
  address        String?
  phone          String
  userId         String @unique
  status         ProviderStatus @default(PENDING)
  category       Category? @relation(fields: [cuisineType], references: [name])
  categoryId String?
  meals          Meal[]
  user           User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("provider_profiles")
}



// 3. Categories (Cuisine types like "Italian", "Desi")
model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  description String?
  meals     Meal[]   // Relation to Meals
  providerProfiles ProviderProfile[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("categories")
}



// 4. Meals 
model Meal {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Float
  imageUrl    String?
  
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  reviews     Review[]
  providerId  String
  provider    ProviderProfile @relation(fields: [providerId], references: [id], onDelete: Cascade)

  orderItems OrderItem[]

  isDeleted Boolean @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("meals")
}

// 5. Orders (Customer orders)
model Order {
  id         String      @id @default(uuid())
  userId     String
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  status     OrderStatus @default(PENDING)
  totalPrice Float
  orderItems OrderItem[]
  reviews Review[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@map("orders")
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  DELIVERED
  CANCELLED
}

model OrderItem{
  id        String   @id @default(uuid())
  
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  mealId    String
  meal      Meal     @relation(fields: [mealId], references: [id], onDelete: Cascade)

  status    OrderStatus @default(PENDING)
  
  quantity  Int
  price     Float    // Price at the time of order

  @@map("order_items")
}

// 6. Reviews (Customer reviews for meals)
model Review {
  id        String   @id @default(uuid())
  rating    Int      // e.g., 1 to 5
  comment   String?
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  mealId    String
  meal      Meal     @relation(fields: [mealId], references: [id], onDelete: Cascade)

  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("reviews")
}